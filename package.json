{
	"name": "cactus",
	"version": "1.0.0",
	"description": "Gaze Interaction Browser",
	"main": "app/electron/main.js",
	"scripts": {
		"start": "gulp mainCss && gulp webviewCss && gulp bookmarksCss && gulp keyboardCss && electron .",
		"build": "gulp mainCss && gulp webviewCss && gulp bookmarksCss && gulp keyboardCss",
		"dist": "build"
	},
	"author": "HCI Lab - Faculty of ICT, University of Malta",
	"license": "GPL3",
	"build": {
		"appId": "cactus",
		"asar": false,
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 240,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"icon": "/app/resources/logo.png",
			"target": [
				"AppImage",
				"deb"
			]
		},
		"win": {
			"target": "squirrel",
			"icon": "/app/resources/logo.png"
		},
		"mac": {
			"icon": "/app/resources/logo.png"
		}
	},
	"devDependencies": {
		"cactus-menu-builder": "git+ssh://git@github.com:hci-lab-um/cactus-menu-builder.git",
		"cactus-quadtree-builder": "git+ssh://git@github.com:hci-lab-um/cactus-quadtree-builder.git",
		"devtron": "^1.4.0",
		"electron": "^31.3.1",
		"electron-builder": "^20.44.4",
		"electron-builder-squirrel-windows": "^21.2.0",
		"eslint": "^5.16.0",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.1.0",
		"node-sass": "^9.0.0"
	},
	"dependencies": {
		"config": "^3.3.12",
		"dompurify": "^3.1.6",
		"electron-log": "^5.1.7",
		"lodash": "^4.17.11",
		"original-fs": "^1.0.0",
		"path": "^0.12.7"
	}
}